<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "osd.database.ProfessorRecord" table = "scheduler_professor">
      
      <id name = "id" type = "int" column = "ID">
         <generator class="native"/>
      </id>
      
      <property name = "firstName" column = "FIRST" type = "string"/>
      <property name = "lastName" column = "LAST" type = "string"/>
      <property name = "divisionId" column = "DIVISION_ID" type = "string"/>
      
   </class>
</hibernate-mapping>