<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "osd.database.RoomRecord" table = "scheduler_room">
      
      <id name = "id" type = "int" column = "ID">
         <generator class="native"/>
      </id>

      <property name="roomTypeId" column="ROOM_TYPE_ID" type="int" />
      <property name="divisionId" column="DIVISION_ID" type="int" />
      <property name="roomNumber" column="ROOM_NUMBER" type="int" />
      <property name="subject" column="SUBJECT" type="string" />
      <property name="building" column="BUILDING" type="string" />

   </class>
</hibernate-mapping>