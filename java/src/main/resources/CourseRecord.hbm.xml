<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "osd.database.CourseRecord" table = "scheduler_course">
      
      <id name = "id" type = "int" column = "ID">
         <generator class="native"/>
      </id>

      <property name="divisionId" column="DIVISION_ID" type="int" />
      <property name="style" column="STYLE" type="string" />
      <property name="sectionCapacity" column="SECTION_CAPACITY" type="int" />
      <property name="insMethod" column="INS_METHOD" type="string" />
      <property name="title" column="TITLE" type="string" />
      <property name="program" column="PROGRAM" type="string" />

   </class>
</hibernate-mapping>